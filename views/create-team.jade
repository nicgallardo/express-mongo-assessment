extends layout

block content
  div(class="row")
    div(class="col-md-6 col-md-offset-3")
      div(class="jumbotron text-center")
          h2 team creator
          form(action="/createlineup" method="post")
            p
              label(for="teamCity") Team City
                input(type="text" id="teamCity" name="teamCity")
            p
              label(for="teamName") Team Name
                input(type="text" id="teamName" name="teamName")
            p
              label(for="coach") Coach Name
                input(type='text' id="coach" name="coachName")
            button(type="submit" value="submit") Create Starting Lineup
          
